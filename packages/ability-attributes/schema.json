{
  "version": "1.0",

  "constraints": {
    "$atomic": {
      "xpath": "not(boolean((.//*[@role and @role != 'none' and @role != 'presentation'] | .//a | .//area | .//button | .//input | .//object | .//select | .//textarea)[ancestor-or-self::*[@aria-hidden != 'true']]))",
      "description": "Component cannot contain other accessible components"
    },

    "$hasText": {
      "xpath": ".//text()[normalize-space(.) != '']",
      "description": "Component must contain text nodes"
    },

    "$existingIDs": {
      "js": "checkIdentifiers",
      "description": "Value must be space-separated list of existing element identifiers"
    }
  },

  "parameters": {
    "$label": {
      "one": [
        {
          "name": "label",
          "attribute": "aria-label"
        },
        {
          "name": "labelledBy",
          "attribute": "aria-labelledby",
          "constraints": [{ "ref": "$existingIDs" }]
        }
      ]
    },

    "$describedBy": {
      "name": "describedBy",
      "attribute": "aria-describedby",
      "constraints": [{ "ref": "$existingIDs" }]
    },

    "$checked": {
      "name": "checked",
      "attribute": "aria-checked",
      "value": [
        { "parameter": true, "attribute": "true" },
        { "parameter": false, "attribute": "false" }
      ]
    },

    "$tabbable": {
      "name": "tabbable",
      "attribute": "tabindex",
      "value": [{ "parameter": true, "attribute": "0" }, { "parameter": false, "attribute": "-1" }]
    }
  },

  "attributes": {
    "$tabindex": {
      "name": "tabindex",
      "value": ["0", "-1"]
    }
  },

  "classes": {
    "Body": {
      "assumptions": [{ "tag": "<body>" }],
      "tags": { "<body>": {} }
    },

    "Header1": {
      "assumptions": [
        { "tag": "<h1>" },
        {
          "tag": "<div>",
          "attributes": [
            { "name": "role", "value": "heading" },
            { "name": "aria-level", "value": "1" }
          ]
        }
      ],

      "parameters": [{ "ref": "$label", "optional": { "ref": "$hasText" } }],

      "tags": {
        "<h1>": {},
        "<div>": {
          "attributes": [
            { "name": "role", "value": "heading" },
            { "name": "aria-level", "value": "1" }
          ]
        }
      }
    },

    "Button": {
      "assumptions": [
        { "tag": "<button>" },
        { "tag": "<div>", "attributes": [{ "name": "role", "value": "button" }] }
      ],

      "constraints": [{ "ref": "$atomic" }],

      "parameters": [
        { "ref": "$label", "optional": { "ref": "$hasText" } },
        { "ref": "$describedBy", "optional": true },
        { "ref": "$tabbable", "optional": true }
      ],

      "tags": {
        "<button>": {},

        "<input>": {
          "attributes": [{ "name": "type", "value": ["button", "submit", "reset"] }]
        },

        "<div>, <span>": {
          "attributes": [{ "name": "role", "value": ["button"] }, { "ref": "$tabindex" }]
        }
      }
    }
  }
}
