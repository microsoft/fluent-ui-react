{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "baseUrl": "../",
    "paths": {
      "@fluentui/docs": ["docs"],
      "@fluentui/e2e": ["e2e"],
      "@fluentui/internal-tooling": ["build"],
      "@fluentui/perf": ["perf"],
      "@fluentui/*": ["packages/*/src"]
    },
    "types": ["node", "jest"],
    "jsx": "react",
    "importHelpers": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "pretty": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true
  }
}
