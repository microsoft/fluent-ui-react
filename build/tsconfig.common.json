{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "baseUrl": "../",
    "paths": {
      "@stardust-ui/react": ["packages/react/src"],
      "*": ["*", "types/*"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["../types", "../node_modules/@types"],
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true
  }
}
